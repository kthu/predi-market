template(name='CreateAdmin')
  div.dialog-container
    div.container-fluid
      div.row
        div.col-md-6.col-md-push-3
          +markdown
            {{_ 'welcome_admin_text'}}
      div.row
        form.form.col-md-4.col-md-push-4.center-block(role="form")
          div.panel.panel-default
            div.panel-body
              form(role="form")
                div.form-group
                  input.form-control#admin_username(type="text" placeholder="{{_ 'init_admin_username'}}")
                div.form-group
                  input.form-control#admin_name(type="text" placeholder="{{_ 'init_admin_name'}}")
                div.form-group
                  input.form-control#admin_email(type="email" placeholder="{{_ 'init_admin_email'}}")
                div.form-group
                  input.form-control#admin_password(type="password" placeholder="{{_ 'init_admin_password'}}")
                div.form-group
                  input.form-control#admin_repeat_password(type="password" placeholder="{{_ 'init_admin_repeat_password'}}")
                div.form-group
                  label(for="admin_generate_data")
                    input#admin_generate_data(type="checkbox")
                    span {{_ "init_admin_data"}}
                div.form-group.pull-right
                  button.btn.btn-danger#create_admin(type="submit")
                    i.fa.fa-check {{_ "button_create_administrator"}}

template(name='NewUser')
  div.dialog-container
    div.container-fluid
      div.row
        div.col-md-6.col-md-push-3
          +markdown
            {{_ 'welcome_text'}}
      div.row
        form.form.col-md-4.col-md-push-4.center-block(role="form")
          div.panel.panel-default
            div.panel-body
              form(role="form")
                div.form-group
                  input.form-control#username(type="text" placeholder="{{_ 'init_admin_username'}}")
                div.form-group
                  input.form-control#name(type="text" placeholder="{{_ 'init_admin_name'}}")
                div.form-group
                  input.form-control#email(type="email" placeholder="{{_ 'init_admin_email'}}")
                {{> reCAPTCHA}}
                div.form-group.pull-right
                  button.btn.btn-danger(style="margin-top: 10px")#create_user(type="submit")
                    i.fa.fa-check {{_ "button_create_user"}}

    div#footer
